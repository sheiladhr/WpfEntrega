<Window x:Class="EntregasWPF_JOSEPART.NuevoPedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntregasWPF_JOSEPART"
        mc:Ignorable="d"
        Title="NuevoPedido" Height="238.863" Width="376.659">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="23,53,0,0" TextWrapping="Wrap" Text="Descripción :" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,19,0,0" TextWrapping="Wrap" Text="DNI :" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtDNI"  HorizontalAlignment="Left" Margin="123,19,0,0" TextWrapping="Wrap" Text="{Binding cliente}" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Height="77" Text="{Binding descripcion}" Margin="123,55,0,0" VerticalAlignment="Top" Width="222">

        </TextBox>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="23,151,0,0" VerticalAlignment="Top" Width="104" Height="49" Click="btnGuardar_Click"/>
        <Button x:Name="btnVolver" Content="Volver" HorizontalAlignment="Left" Margin="241,151,0,0" VerticalAlignment="Top" Width="104" Height="49"/>

    </Grid>
</Window>
